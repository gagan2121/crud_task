<div class="container-fluid">
  <div class="row">
    <!-- Sidebar with product list -->
    <div class="col-md-3 col-lg-2 sidebar">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Products</h2>
        <%= link_to "New", new_product_path, class: "btn btn-sm btn-success" %>
      </div>
      
      <div class="list-group" id="products">
        <% @products.each do |product| %>
          <%= link_to product.name, product, 
              class: "list-group-item list-group-item-action #{'active' if product == @products.first}",
              data: { turbo_frame: "product_details" } %>
        <% end %>
      </div>
    </div>
    
    <!-- Main content area -->
    <div class="col-md-9 col-lg-10 main-content">
      <%= turbo_frame_tag "product_details" do %>
        <% if @products.any? %>
          <%= render "show", product: @products.first %>
        <% else %>
          <div class="alert alert-info mt-4">
            No products found. Create your first product!
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>