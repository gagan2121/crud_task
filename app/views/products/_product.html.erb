<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <% if product.image.attached? %>
      <%= image_tag product.image, class: "img-fluid mb-4", style: "max-width: 300px;" %>
    <% end %>
  </p>

</div>
